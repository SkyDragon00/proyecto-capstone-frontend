{% extends "base.html.j2" %}

{% block title %}Inicio{% endblock title %}

{% block header %}
<header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="container mx-auto px-4 py-1 flex justify-between items-center">
        <div class="flex items-center space-x-2">
            <img src="{{ url_for('static', path='imgs/LogoUdlaColorTexto.png') }}" alt="Logo UDLA"
                class="h-20 w-auto" />

        </div>
        <nav class="hidden md:flex space-x-8">
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a>
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Eventos</a>
            <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Contacto</a>
        </nav>
        <div class="flex items-center space-x-4">
            <button style="background-color: var(--primary-color);"
                class="text-white px-4 py-2 rounded-lg hover:brightness-90 transition">
                <i class="fas fa-user mr-2"></i> Mi Perfil
            </button>
            <button class="md:hidden text-gray-700" id="mobile-menu-button">
                <i class="fas fa-bars text-2xl"></i>
            </button>
        </div>


        <!-- Mobile Menu -->
        <div class="md:hidden hidden bg-white w-full py-4 px-4 shadow-md" id="mobile-menu">
            <div class="flex flex-col space-y-3">
                <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a>
                <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Events</a>
                <a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Contact</a>
            </div>
        </div>
</header>
{% endblock header %}

{% block main %}
<section class="hero-section text-white py-16">
    <div class="container mx-auto px-4 flex flex-col items-center text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in">Descubre emocionantes eventos universitarios
        </h1>
        <p class="text-xl mb-8 max-w-2xl opacity-90 animate-fade-in" style="animation-delay: 0.2s;">
            Explore y descubre todas las oportunidades que tiene la UDLA para ti.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 w-full max-w-lg animate-fade-in" style="animation-delay: 0.4s;">
            <input type="text" placeholder="Buscar eventos..." class="flex-grow px-4 py-3 rounded-lg text-gray-800" />
            <button class="bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
                <i class="fas fa-search mr-2"></i> Buscar
            </button>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Eventos relevantes</h2>
            <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center">
                Ver todos <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>


        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for event in events %}
            {% include "./components/event-card.html.j2" %}
            {% endfor %}
        </div>
    </div>
</section>

<!-- Upcoming Events (dynamic) -->
<section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Upcoming Events</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="events-container">
            <!-- Event cards will be loaded here dynamically -->
        </div>
    </div>
</section>
{% endblock main %}