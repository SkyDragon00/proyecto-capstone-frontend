{% extends "base.html.j2" %}

{% block title %}Inicio{% endblock title %}

{% block header_nav %}
{% if role == "organizer" %}
<li>
    <a href="/all-events-view">Administrar Eventos</a>
</li>
<li>
    <a href="/organizer">Administrar Organizadores</a>
</li>
<li>
    <a href="/staff-to-event">Añadir Staff a Evento</a>
</li>
<li>
    <a href="http://localhost:8501">Dashboard</a>
</li>
{% elif role == "assistant" %}
{% elif role == "staff" %}
<li>
    <a href="/select-event-to-record">Grabar Asistencia</a>
</li>
{% endif %}
{% endblock header_nav %}

{% block main %}
<section class="hero flex-center">
    <div class="hero-left">
        <h1 class="hero-title">
            Descubre emocionantes eventos universitarios
        </h1>
        <a href="/login" class="a-button-filled-red" style="--padding: 0 1.7rem 0 2rem;">
            Log In
            <animated-icons
                src="https://animatedicons.co/get-icon?name=Activate&style=minimalistic&token=98bf6abb-a20e-4455-a6cd-c57c4b80012c"
                trigger="loop"
                attributes='{"variationThumbColour":"#536DFE","variationName":"Two Tone","variationNumber":2,"numberOfGroups":2,"backgroundIsGroup":false,"strokeWidth":1,"defaultColours":{"group-1":"#000000","group-2":"#C10230FF","background":"#FFFFFF"}}'
                height="50" width="50"></animated-icons>
        </a>
    </div>
    <figure class="hero-right">
        <img src="{{ url_for('static', path='imgs/hero.webp') }}" alt="Imagen de eventos universitarios" />
        <!-- <figcaption>Imagen de eventos universitarios</figcaption> -->
    </figure>
</section>

<section class="upcoming-events">
    <div class="flex-center justify-between">
        <h2>
            Próximos Eventos
        </h2>
        <a href="/events" class="flex-center a-button-outline-red">
            Ver todos
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-narrow-right">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M5 12l14 0" />
                <path d="M15 16l4 -4" />
                <path d="M15 8l4 4" />
            </svg>
        </a>
    </div>


    <ul class="list-upcoming-events">
        {% for event in events %}
        <li>
            {% include "./components/event-card.html.j2" %}
        </li>
        {% endfor %}
    </ul>
</section>
{% endblock main %}

{% block scripts %}
<script src="https://animatedicons.co/scripts/embed-animated-icons.js"></script>
{% endblock scripts %}